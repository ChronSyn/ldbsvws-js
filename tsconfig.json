{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./build/"
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}